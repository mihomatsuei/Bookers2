
<h2>User info</h2>
<%= form_for(@user) do |f| %>
  <h4>name</h4>
  <%= f.text_field :name, autofocus: true%>

  <h4>image</h4>
  <%= f.attachment_field :profile_image %>

  <h4>Introduction</h4>
  <%= f.text_area :introduction %>

 <%= f.submit "Update User" %>
<% end %>

<% if @user.errors.any? %>
error
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>