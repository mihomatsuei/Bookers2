
		  <div class="col-xs-3">
			<h2>User info</h2>

			<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
			<p>name</p>
			<%= @user.name %>

			<p>introduction</p>
			<%= @user.introduction %>


			<div class="row">
				<%= link_to "", edit_user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench "%>
			</div>
			<h3>New book</h3>
			<%= form_for(@book) do |f| %>

				<h4>Title</h4>
				<%= f.text_field :title %>

				<h4>Opinion</h4>
				<%= f.text_area :body %>

				<br><%= f.submit 'Create Book', class: "btn btn-primary" %></br>

			<% end %>


			<% if @book.errors.any? %>
			error
			    <ul>
			      <% @book.errors.full_messages.each do |message| %>
			        <li><%= message %></li>
			      <% end %>
			    </ul>
			<% end %>
</div>