<%= flash[:notice] %>

<h2>Books</h2>

<table>
<tr>
<th>Title</th>
<th>Opinion</th>
<th></th>
</tr>

<% @books.each do |book| %>
<tr>
<td><%= book.title %></td>
<td><%= book.body %></td>
</tr>
<% end %>
</table>

<h3>New book</h3>
<%= form_for(@book) do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>

<br><%= f.submit 'Create Book' %></br>

<% end %>

<% if @book.errors.any? %>
error
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>