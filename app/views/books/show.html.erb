
 <!--このページ復習する--->
<%= flash[:notice] %>
<%= render 'users/list', user: @user, book: @book %>
<div class="col-xs-9">


  <h2>Book detail</h2>
  <table class="table">
    <tbody>
      <tr>
<td><%= link_to(user_path(@user),class: 'text-center') do %><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg",size: "50x50" %><% end %>
</td>
<!--本のタイトルをクリックするとbooksdetailへ--->
<td><%= link_to @find_book.title, book_path(@find_book.id) %></td>
<td><%= @find_book.body %></td>
<% if current_user == @user %>
<td>
 <button type="button" class="btn btn-success btn-xs"><%= link_to "Edit", edit_book_path(@find_book.id) %></button>
</td>
<td>
<button type="button" class="btn btn-danger btn-xs"><%= link_to "Destroy", book_path(@find_book.id), method: :delete, "data-confirm" => "本当に消しますか?" %></button>
</td>
<% end %>

</tr>
    </tbody>
  </table>
  <p><%= link_to @user.name, user_path(@user.id) %></p>

</body>
</html>